{
  "name": "staticman",
  "version": "2.0.0",
  "description": "Static sites with superpowers",
  "main": "index.js",
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "start": "node index.js",
    "test": "standard && jest && node test/utils/coverage.js",
    "test-dev": "TEST_DEV=true jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donaldboulton/dwb-staticman.git"
  },
  "author": "Donald Boulton <mail@donboulton.com> (https://donboulton.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/donaldboulton/staticman/issues"
  },
  "homepage": "https://github.com/donaldboulton/staticman#readme",
  "dependencies": {
    "akismet": "^1.0.0",
    "babel-eslint": "^8.2.3",
    "body-parser": "^1.17.x",
    "convict": "^4.3.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-react": "^6.10.3",
    "express": "^4.14.0",
    "express-brute": "^0.6.0",
    "express-github-webhook": "^1.0.5",
    "express-recaptcha": "^2.1.0",
    "github": "^3.0.0",
    "https-proxy-agent": "^2.2.1",
    "js-yaml": "^3.10.0",
    "mailgun-js": "^0.18.0",
    "markdown-table": "^1.0.0",
    "md5": "^2.1.0",
    "moment": "^2.18.1",
    "node-rsa": "^0.4.2",
    "node-uuid": "^1.4.7",
    "object-path": "^0.11.1",
    "raven": "^1.1.3",
    "request-promise-native": "^1.0.4",
    "sha1": "^1.1.1",
    "slug": "^0.9.1",
    "universal-analytics": "^0.4.2",
    "validator": "^10.3.0"
  },
  "devDependencies": {
    "front-matter": "^2.1.2",
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^20.0.4",
    "nock": "^9.0.13",
    "standard": "^10.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "lib/**/*.js",
      "*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  }
}
