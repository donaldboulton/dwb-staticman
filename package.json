{
  "name": "staticman",
  "version": "2.5.0",
  "description": "Static sites with superpowers",
  "main": "index.js",
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "start": "node index.js",
    "test": "standard && jest && node test/utils/coverage.js",
    "test-dev": "TEST_DEV=true jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donaldboulton/staticman.git"
  },
  "author": "Eduardo Boucas <mail@donboulton.com> (https://donboulton.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/donaldboulton/staticman/issues"
  },
  "homepage": "https://github.com/donaldboulton/staticman#readme",
  "dependencies": {
    "@dadi/logger": "^1.4.1",
    "acorn": "^6.0.5",
    "akismet": "^1.0.0",
    "body-parser": "^1.18.3",
    "bunyan-slack": "0.0.10",
    "convict": "^4.4.1",
    "express": "^4.16.4",
    "express-brute": "^0.6.0",
    "express-github-webhook": "^1.0.6",
    "express-recaptcha": "^4.1.1",
    "fs-extra": "^7.0.1",
    "github": "^14.0.0",
    "js-yaml": "^3.12.1",
    "kleur": "^3.0.1",
    "mailgun-js": "^0.22.0",
    "markdown-table": "^1.1.2",
    "md5": "^2.1.1",
    "moment": "^2.23.0",
    "node-rsa": "^1.0.2",
    "node-uuid": "^1.4.8",
    "object-path": "^0.11.4",
    "request-promise-native": "^1.0.5",
    "sha1": "^1.1.1",
    "slug": "^0.9.3",
    "universal-analytics": "^0.4.20"
  },
  "devDependencies": {
    "front-matter": "^3.0.1",
    "istanbul-cobertura-badger": "^1.3.1",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "standard": "^12.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "lib/**/*.js",
      "*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  }
}
